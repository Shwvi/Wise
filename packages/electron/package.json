{
  "name": "@wise/electron",
  "description": "An effective tool",
  "author": {
    "name": "Shwvi"
  },
  "build": {
    "fileAssociations": [
      {
        "ext": ".icns"
      }
    ],
    "productName": "wise",
    "directories": {
      "output": "builder"
    },
    "appId": "com.electron.wise",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "./dist/**/*"
    ]
  },
  "main": "dist/index.js",
  "version": "0.0.2",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "nodemon --exec \"cross-env APPENV=DEV electron\" .",
    "start": "nodemon --exec \"electron\" .",
    "pack": "electron-builder --dir",
    "dist": "rm -rf ./builder && yarn electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "sqlite3": "5.0.2",
    "sequelize": "6.13.0",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-cors": "0.0.16",
    "koa-multer": "1.0.2",
    "koa-router": "10.1.1",
    "koa-static": "5.0.0",
    "pg": "8.7.1",
    "pg-hstore": "2.3.4",
    "uuid": "8.3.2",
    "@wise/common": "^0.0.2"
  },
  "devDependencies": {
    "electron": "16.0.7",
    "electron-builder": "22.14.5",
    "nodemon": "2.0.15",
    "typescript": "4.5.4",
    "@types/koa": "2.13.4",
    "@types/koa-bodyparser": "4.3.5",
    "@types/koa-cors": "0.0.2",
    "@types/koa-multer": "1.0.1",
    "@types/koa-router": "7.4.4",
    "@types/koa-static": "4.0.2",
    "@types/uuid": "8.3.4"
  }
}
